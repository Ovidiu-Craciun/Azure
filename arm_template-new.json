{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vnetName": {
            "type": "string"
        },
        "vnetAddressPrefix": {
            "type": "string"
        },
        "subnet1Prefix": {
            "type": "string"
        },
        "subnet1Name": {
            "type": "string"
        },
        "subnet2Prefix": {
            "type": "string"
        },
        "subnet2Name": {
            "type": "string"
        },
        "subnet3Prefix": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "NsgName": {
            "type": "string"
        },
        "VirtualMachineName01": {
            "type": "string"
        },
        "VirtualMachineName02": {
            "type": "string"
        },
        "adminUsername1": {
            "type": "string"
        },
        "adminPassword1": {
            "type": "securestring"
        },
        "adminUsername2": {
            "type": "string"
        },
        "adminPassword2": {
            "type": "securestring"
        },
        "virtualMachineSize": {
            "type": "string",
            "defaultValue": "Standard_DS1_v2"
        },
        "publicIPAddressType": {
            "type": "string",
            "defaultValue": "Static",
            "allowedValues": [
                "Dynamic",
                "Static"
            ]
        },
        "bastionHostName": {
            "type": "string"
        },
        "resourceGroupName": {
            "type": "string"
        },
        "subnet3Name": {
            "type": "string",
            "defaultValue": "AzureBastionSubnet"
        }
    },
    "variables": {
        "nic1": "nic-1",
        "nic2": "nic-2",
        "publicIPAddressName": "publicIp"
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2018-11-01",
            "location": "[parameters('location')]",
            "name": "[parameters('vnetName')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetAddressPrefix')]"
                    ]
                }
            },
            "resources": [
                {
                    "apiVersion": "2018-11-01",
                    "type": "subnets",
                    "location": "[parameters('location')]",
                    "name": "[parameters('subnet1Name')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]"
                    ],
                    "properties": {
                        "addressPrefix": "[parameters('subnet1Prefix')]"
                    }
                },
                {
                    "apiVersion": "2018-11-01",
                    "type": "subnets",
                    "location": "[parameters('location')]",
                    "name": "[parameters('subnet2Name')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]"
                    ],
                    "properties": {
                        "addressPrefix": "[parameters('subnet2Prefix')]"
                    }
                },
                {
                    "apiVersion": "2018-11-01",
                    "type": "subnets",
                    "name": "[parameters('subnet3Name')]",
                    "location": "[parameters('location')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]"
                    ],
                    "properties": {
                        "addressPrefix": "[parameters('subnet3Prefix')]"
                    }
                }
            ]
        },
        {
            "apiVersion": "2019-09-01",
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[variables('publicIPAddressName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "Basic"
            },
            "properties": {
                "publicIPAddressVersion": "IPv4",
                "publicIPAllocationMethod": "[parameters('publicIPAddressType')]"
            }
        },

        {
            "apiVersion": "2018-11-01",
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[parameters('NsgName')]",
            "location": "[parameters('location')]",
            "properties": {
                "securityRules": [
                    {
                        "name": "rdp_rule1",
                        "properties": {
                            "description": "Allow only RDP connection",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "3389",
                            "sourceAddressPrefix": "Internet",
                            "destinationAddressPrefix": "[parameters('subnet1Prefix')]",
                            "access": "Allow",
                            "priority": 100,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "rdp_rule2",
                        "properties": {
                            "description": "Allow connection only from subnet1",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "[parameters('subnet1Prefix')]",
                            "destinationAddressPrefix": "[parameters('subnet2Prefix')]",
                            "access": "Allow",
                            "priority": 101,
                            "direction": "Inbound"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[variables('nic1')]",
            "apiVersion": "2019-04-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]",
                "[concat(resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName')), '/subnets/', parameters('subnet1Name'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "IPConfig-1",
                        "properties": {
                            "primary": true,
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[concat(resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName')), '/subnets/', parameters('subnet1Name'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[variables('nic2')]",
            "apiVersion": "2019-04-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]",
                "[concat(resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName')), '/subnets/', parameters('subnet2Name'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "IPConfig-2",
                        "properties": {
                            "primary": true,
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[concat(resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName')), '/subnets/', parameters('subnet2Name'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "[parameters('VirtualMachineName01')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2018-10-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', variables('nic1'))]"
            ],
            "properties": {
                "osProfile": {
                    "computerName": "[parameters('virtualMachineName01')]",
                    "adminUsername": "[parameters('adminUsername1')]",
                    "adminPassword": "[parameters('adminPassword1')]"
                },
                "hardwareProfile": {
                    "vmSize": "[parameters('virtualMachineSize')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('nic1'))]",
                            "properties": {
                                "primary": true
                            }
                        }
                    ]
                }
            }
        },
        {
            "name": "[parameters('VirtualMachineName02')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2018-10-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', variables('nic2'))]"
            ],
            "properties": {
                "osProfile": {
                    "computerName": "[parameters('virtualMachineName02')]",
                    "adminUsername": "[parameters('adminUsername2')]",
                    "adminPassword": "[parameters('adminPassword2')]"
                },
                "hardwareProfile": {
                    "vmSize": "[parameters('virtualMachineSize')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('nic2'))]",
                            "properties": {
                                "primary": true
                            }
                        }
                    ]
                }
            }
        },
        {
            "apiVersion": "2019-09-01",
            "type": "Microsoft.Network/bastionHosts",
            "name": "[parameters('bastionHostName')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId(parameters('resourceGroupName'), 'Microsoft.Network/publicIpAddresses', variables('publicIPAddressName'))]",
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]",
                "[concat(resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName')), '/subnets/', parameters('subnet2Name'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "[concat(parameters('bastionHostName'),'-CFG')]",
                        "properties": {
                            "subnet": {
                                "id": "[resourceId(parameters('resourceGroupName'), 'Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'),parameters('subnet3Name'))]"
                            },
                            "publicIPAddress": {
                                "id": "[resourceId(parameters('resourceGroupName'), 'Microsoft.Network/publicIpAddresses', variables('publicIPAddressName'))]"
                            }
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
    }
}